{
    "version": 2,
    "configurePresets": [
        {
            "name": "linux-llvm-multi-ninja",
            "displayName": "Linux Ninja Multi-Config",
            "description": "Sets Ninja Multi-Config generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/.build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": {
                    "type": "INTERNAL",
                    "value": "clang++"
                },
                "CMAKE_C_COMPILER": {
                    "type": "INTERNAL",
                    "value": "clang"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-llvm-multi-ninja",
            "configurePreset": "linux-llvm-multi-ninja",
            "targets": [
                "test_application"
            ]
        }
    ]
}